@model List<Aula_6_LP3_Parte2.Models.Produto>

@{
    ViewBag.Title = "Produtos";
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/JavaScript.js"></script>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Consulta</title>
</head>
<body>
    <nav id="menu">
        <ul>
            <li id="atu"><h1><a href="@Url.Action("Index","Home")">Home</a></h1></a></li>
            <li><a href="@Url.Action("Clientes","Cliente")">Cliente</a></li>
            <li><a href="@Url.Action("Produtos","Produto")">Produto</a></li>
            <li><a href="@Url.Action("Compras","Compra")">Compra</a></li>
        </ul>
    </nav>
    @using (Html.BeginForm())
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="thead-dark">
                    <th colspan="6">Produtos</th>
                </tr>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProduto</td>
                        <td>@item.NomeProduto</td>
                        <td>@item.Preco</td>
                        <td>@item.Descricao</td>
                        <td>
                            <a href="@Url.Action("AtualizarProduto", "Produto")/@item.IdProduto" class="btn btn-info btn-sm">
                                Atualizar
                            </a>
                            <a href="@Url.Action("DeletarProduto", "Produto")/@item.IdProduto" class="btn btn-danger btn-sm">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <a href="@Url.Action("CadastrarProduto", "Produto")" class="btn btn-success btn-sm">
                            Cadastrar
                        </a>
                    </td>
                    <td colspan="6">Quantidade de Produtos Cadastrados: @Model.Count</td>
                </tr>
            </tfoot>
        </table>
    }
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>